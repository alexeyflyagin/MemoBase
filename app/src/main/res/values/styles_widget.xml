<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MemoBase.Button.IconButton" parent="@style/Widget.Material3.Button.IconButton">
        <item name="iconTint">?attr/colorOnSurfaceVariant</item>
        <item name="iconSize">24dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.MemoBase.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.MemoBase.NoteItem.ButtonChecked" parent="@style/Widget.MemoBase.Button.IconButton">
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:checkable">true</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="iconTint">@color/color_btn_select_explorer_item</item>
        <item name="backgroundTint">@color/surface_container_high</item>
        <item name="cornerRadius">100dp</item>
        <item name="icon">@drawable/btn_checked_selector</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">22dp</item>
    </style>

    <style name="Widget.MemoBase.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">?attr/colorOutline</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.MemoBase.TextInputLayout.OutlineBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="Widget.MemoBase.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MemoBase.BottomSheetDialog</item>
    </style>
</resources>