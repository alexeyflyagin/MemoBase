<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:maxHeight="48dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_corners_8"
    android:backgroundTint="?attr/colorSurface">

    <ImageView
        android:id="@+id/item_dialog_menu_ivIcon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_dialog_menu_tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change"
        android:layout_marginStart="10dp"
        android:textAppearance="@style/TextAppearance.MemoBase.BodyLarge"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_dialog_menu_ivIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_dialog_menu_tvBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/corners_100"
        android:backgroundTint="?attr/colorTertiaryContainer"
        android:paddingHorizontal="6dp"
        android:paddingVertical="4dp"
        android:visibility="gone"
        android:text="@string/neww"
        android:textAppearance="@style/TextAppearance.MemoBase.LabelSmall"
        android:textColor="?attr/colorOnTertiaryContainer"
        app:layout_constraintBottom_toBottomOf="@+id/item_dialog_menu_tvLabel"
        app:layout_constraintStart_toEndOf="@+id/item_dialog_menu_tvLabel"
        app:layout_constraintTop_toTopOf="@+id/item_dialog_menu_tvLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>